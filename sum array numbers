

public class Main
{
	public static void main(String[] args) {
	    int arr[]={288,786,987,142};
	    int n=arr.length;
	     int []sum=new int [n];
	    for(int i=0;i<arr.length;i++){
	        int summ=0;
	    while(arr[i]>0){
	    int dig=arr[i]%10;
	    
	    summ=summ+dig;
	    arr[i]=arr[i]/10;
	    }
	    sum[i]=summ;
	    
	    
	    }
	    for(int i=0; i<sum.length; i++){
		System.out.println(sum[i]);
		
		
	}
	   // System.out.println(sum[2]);
	}
}
